{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalPayment"
    },
    {
      "properties": {
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "amount": {
              "$ref": "#/components/schemas/PriceAmount"
            },
            "currency": {
              "$ref": "#/components/schemas/Currency"
            },
            "paid_at": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/Timestamp"
                },
                {
                  "type": "null"
                }
              ]
            },
            "provider_response": {
              "readOnly": true,
              "type": [
                "string",
                "null"
              ],
              "example": "succeeded"
            },
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "updated_at": {
              "$ref": "#/components/schemas/Timestamp"
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "organization",
            "status"
          ],
          "additionalProperties": false,
          "properties": {
            "organization": {
              "$ref": "#/components/schemas/OrganizationRelationship"
            },
            "status": {
              "$ref": "#/components/schemas/StatusRelationship"
            },
            "invoice": {
              "$ref": "#/components/schemas/InvoiceRelationship"
            },
            "payment-identity": {
              "$ref": "#/components/schemas/PaymentIdentityRelationship"
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "readOnly": true,
              "type": "string",
              "example": "$API_HOST/payments/a8948d0c-ec4c-4c4b-8c03-191123e3ce1e"
            }
          }
        }
      }
    }
  ]
}

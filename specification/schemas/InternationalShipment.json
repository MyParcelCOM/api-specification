{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/Shipment"
    },
    {
      "properties": {
        "id": {
          "readOnly": true
        },
        "attributes": {
          "required": [
            "items",
            "customs",
            "recipient_address",
            "return_address",
            "sender_address",
            "physical_properties"
          ],
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "required": [
                  "sku",
                  "item_value",
                  "hs_code",
                  "origin_country_code",
                  "nett_weight"
                ]
              }
            },
            "customs": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/NoInvoiceCustoms"
                },
                {
                  "$ref": "#/components/schemas/InvoiceCustoms"
                }
              ]
            }
          }
        }
      }
    }
  ]
}

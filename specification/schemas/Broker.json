{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalBroker"
    },
    {
      "required": [
        "attributes"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "name",
            "style"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "example": "MyParcel.com"
            },
            "style": {
              "type": "object",
              "required": [
                "primary_color",
                "secondary_color",
                "accent_color"
              ],
              "additionalProperties": false,
              "properties": {
                "primary_color": {
                  "type": "string",
                  "example": "#3a2efe"
                },
                "secondary_color": {
                  "type": "string",
                  "example": "#192832"
                },
                "accent_color": {
                  "type": "string",
                  "example": "#fdb915"
                }
              }
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "type": "string",
              "example": "$API_HOST/brokers/a294ee55-bc94-4890-b734-afd56c158f95"
            }
          }
        }
      }
    }
  ]
}

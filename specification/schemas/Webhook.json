{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalWebhook"
    },
    {
      "required": [
        "attributes"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "code",
            "name",
            "description"
          ],
          "additionalProperties": false,
          "properties": {
            "code": {
              "type": "string",
              "example": "shipment_status_update"
            },
            "name": {
              "type": "string",
              "example": "Shipment status update"
            },
            "description": {
              "type": "string",
              "example": "Whenever a shipment has a status change, this webhook is called."
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "properties": {
            "self": {
              "type": "string",
              "example": "$API_HOST/webhooks/a0bed0cb-5344-483a-aaa9-e349f6630cf4"
            }
          }
        }
      }
    }
  ]
}
{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalShipment"
    },
    {
      "properties": {
        "attributes": {
          "type": "object",
          "properties": {
            "recipient_address": {
              "$ref": "#/components/schemas/BaseAddress"
            },
            "return_address": {
              "$ref": "#/components/schemas/BaseAddress"
            },
            "sender_address": {
              "$ref": "#/components/schemas/BaseAddress"
            },
            "pickup_location": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "code": {
                  "type": "string",
                  "example": "205604"
                },
                "address": {
                  "$ref": "#/components/schemas/BaseAddress"
                }
              }
            },
            "description": {
              "type": [
                "string",
                "null"
              ],
              "example": "Order #8008135"
            },
            "physical_properties": {
              "$ref": "#/components/schemas/BasePhysicalProperties"
            },
            "items": {
              "oneOf": [
                {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BaseShipmentItem"
                  }
                },
                {
                  "type": "null"
                }
              ]
            },
            "register_at": {
              "oneOf": [
                {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Timestamp"
                    },
                    {
                      "readOnly": false,
                      "description": "This shipment will be registered with the carrier when this time has been reached. While this is `null` or a time in the future, the shipment will stay in concept."
                    }
                  ]
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        },
        "relationships": {
          "type": "object",
          "properties": {
            "service_options": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/ServiceOptionsRelationship"
                },
                {
                  "type": "null"
                }
              ]
            },
            "service_contract": {
              "$ref": "#/components/schemas/ServiceContractRelationship"
            },
            "parent": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShipmentRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "properties": {
                        "id": {
                          "readOnly": true
                        },
                        "type": {
                          "readOnly": true
                        }
                      }
                    }
                  }
                }
              ]
            },
            "shop": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShopRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "properties": {
                        "id": {
                          "readOnly": true
                        },
                        "type": {
                          "readOnly": true
                        }
                      }
                    }
                  }
                }
              ]
            },
            "shipment_status": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShipmentStatusRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "properties": {
                        "id": {
                          "readOnly": true
                        },
                        "type": {
                          "readOnly": true
                        }
                      }
                    }
                  }
                }
              ]
            },
            "files": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShipmentFilesRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "items": {
                        "properties": {
                          "id": {
                            "readOnly": true
                          },
                          "type": {
                            "readOnly": true
                          }
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  ]
}

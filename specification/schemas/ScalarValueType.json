{
  "type": "object",
  "required": [
    "value_type",
    "value"
  ],
  "additionalProperties": false,
  "properties": {
    "value_type": {
      "type": "string",
      "pattern": "^scalar$",
      "example": "scalar"
    },
    "value": {
      "oneOf": [
        {
          "type": "number",
          "example": "5000"
        },
        {
          "type": "string",
          "example": "Africa"
        },
        {
          "type": "null"
        }
      ]

    }
  }
}

{
  "allOf": [
    {
      "$ref": "#/components/schemas/ScopeResource"
    },
    {
      "properties": {
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "slug": {
              "type": "string",
              "maxLength": 255,
              "example": "broker.member"
            },
            "title": {
              "type": "string",
              "maxLength": 255,
              "example": "Member of broker"
            },
            "description": {
              "type": "string",
              "example": "Read broker details and create organizations for that broker."
            }
          }
        }
      }
    }
  ]
}

{
  "allOf": [
    {
      "$ref": "#/components/schemas/InvitationResource"
    },
    {
      "properties": {
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "expires_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "first_name": {
              "type": "string",
              "maxLength": 255,
              "example": "Sherlock"
            },
            "last_name": {
              "type": "string",
              "maxLength": 255,
              "example": "Holmes"
            },
            "email": {
              "$ref": "#/components/schemas/Email"
            },
            "user_types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "returns",
                  "shipping"
                ]
              }
            },
            "locale": {
              "$ref": "#/components/schemas/LocaleEnum",
              "default": "en-GB",
              "description": "Specifies the language for the invitation email."
            }
          }
        },
        "relationships": {
          "type": "object",
          "properties": {
            "broker": {
              "$ref": "#/components/schemas/BrokerRelationship"
            },
            "user": {
              "$ref": "#/components/schemas/UserRelationship"
            }
          }
        }
      }
    }
  ]
}

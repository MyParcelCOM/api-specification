{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalHook"
    },
    {
      "required": [
        "attributes"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "name",
            "resource_type",
            "resource_action",
            "predicate",
            "action"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "example": "shipment-update-send-mail"
            },
            "resource_type": {
              "type": "string",
              "example": "services"
            },
            "resource_action": {
              "type": "string",
              "enum": [
                "create",
                "update"
              ],
              "example": "create"
            },
            "predicate": {
              "$ref": "#/components/schemas/HookPredicate"
            },
            "action": {
              "$ref": "#/components/schemas/HookAction"
            },
            "priority": {
              "type": "number",
              "example": 1
            },
            "active": {
              "type": "boolean",
              "example": true
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "owner"
          ],
          "properties": {
            "owner": {
              "$ref": "#/components/schemas/OwnerRelationship"
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "type": "string",
              "format": "url",
              "example": "$API_HOST/hooks/5c868557-0827-4d21-a7f4-9820f01769f4"
            }
          }
        }
      }
    }
  ]
}

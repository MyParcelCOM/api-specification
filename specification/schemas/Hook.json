{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalHook"
    },
    {
      "required": [
        "attributes",
        "relationships"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "name",
            "order",
            "active",
            "trigger",
            "action"
          ],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "example": "DPD Next Day for medium packages"
            },
            "order": {
              "type": "integer",
              "example": 3,
              "description": "Priority of this hook, lower value means it is triggered first."
            },
            "active": {
              "type": "boolean",
              "example": true
            },
            "trigger": {
              "$ref": "#/components/schemas/HookTrigger"
            },
            "action": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/HookActionTriggerWebhook"
                },
                {
                  "$ref": "#/components/schemas/HookActionUpdateResource"
                }
              ],
              "example": {
                "action_type": "update-resource",
                "values": [
                  {
                    "pointer": "/relationships/service/data/id",
                    "value": "175a235f-aff5-4e44-87b5-3657b75c1deb"
                  }
                ]
              }
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "owner"
          ],
          "properties": {
            "owner": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/BrokerRelationship"
                },
                {
                  "$ref": "#/components/schemas/OrganizationRelationship"
                },
                {
                  "$ref": "#/components/schemas/ShopRelationship"
                }
              ],
              "example": {
                "data": {
                  "type": "organizations",
                  "id": "9cdf86e8-333f-4ed9-bb31-4935c780c947"
                }
              }
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "type": "string",
              "format": "url",
              "example": "$API_HOST/hooks/99c2917a-8cbe-4e04-b4ce-e43263b20332"
            }
          }
        }
      }
    }
  ]
}

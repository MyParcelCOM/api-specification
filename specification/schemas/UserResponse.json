{
  "allOf": [
    {
      "$ref": "#/components/schemas/User"
    },
    {
      "required": [
        "id",
        "attributes"
      ],
      "properties": {
        "attributes": {
          "required": [
            "first_name",
            "last_name",
            "email",
            "locale",
            "status",
            "created_at"
          ]
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "type": "string",
              "format": "url",
              "example": "$API_HOST/users/6b341b44-f2f8-4c8b-b066-b8aa5c78ef6b"
            }
          }
        }
      }
    }
  ]
}

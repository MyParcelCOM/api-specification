{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalShipment"
    },
    {
      "required": [
        "attributes",
        "relationships"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "recipient_address",
            "physical_properties"
          ],
          "additionalProperties": false,
          "properties": {
            "recipient_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "street_1",
                    "city",
                    "country_code"
                  ]
                }
              ]
            },
            "sender_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "street_1",
                    "city",
                    "country_code"
                  ]
                }
              ]
            },
            "pickup_location": {
              "type": "object",
              "required": [
                "code",
                "address"
              ],
              "additionalProperties": false,
              "properties": {
                "code": {
                  "type": "string",
                  "example": "205604"
                },
                "address": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Address"
                    },
                    {
                      "required": [
                        "street_1",
                        "city",
                        "country_code"
                      ]
                    }
                  ]
                }
              }
            },
            "description": {
              "type": "string",
              "example": "Order #8008135"
            },
            "price": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Price"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "insurance": {
              "$ref": "#/components/schemas/Price"
            },
            "barcode": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_code": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_url": {
              "readOnly": true,
              "type": "string",
              "example": "https://tracker.carrier.com/3SABCD0123456789"
            },
            "physical_properties": {
              "$ref": "#/components/schemas/PhysicalProperties"
            },
            "physical_properties_verified": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/PhysicalProperties"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "customs": {
              "type": "object",
              "required": [
                "content_type",
                "invoice_number",
                "items",
                "non_delivery",
                "incoterm"
              ],
              "additionalProperties": false,
              "properties": {
                "content_type": {
                  "type": "string",
                  "enum": [
                    "merchandise",
                    "sample_merchandise",
                    "returned_merchandise",
                    "documents",
                    "gifts"
                  ],
                  "example": "merchandise"
                },
                "invoice_number": {
                  "type": "string",
                  "example": "9000"
                },
                "items": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShipmentItem"
                  }
                },
                "non_delivery": {
                  "type": "string",
                  "enum": [
                    "return",
                    "abandon"
                  ],
                  "example": "return",
                  "description": "Action when the parcel cannot be delivered"
                },
                "incoterm": {
                  "type": "string",
                  "enum": [
                    "DDU",
                    "DDP"
                  ],
                  "example": "DDU",
                  "description": "DDU (Delivered Duty Unpaid) or DDP (Delivered Duty Paid)"
                }
              }
            },
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "updated_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "synced_at": {
              "$ref": "#/components/schemas/Timestamp"
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "shop",
            "service_contract"
          ],
          "properties": {
            "service_options": {
              "$ref": "#/components/schemas/ServiceOptionsRelationship"
            },
            "parent": {
              "$ref": "#/components/schemas/ShipmentRelationship"
            },
            "shop": {
              "$ref": "#/components/schemas/ShopRelationship"
            },
            "status": {
              "$ref": "#/components/schemas/ShipmentStatusRelationship"
            },
            "service_contract": {
              "$ref": "#/components/schemas/ServiceContractRelationship"
            },
            "files": {
              "$ref": "#/components/schemas/ShipmentFilesRelationship"
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "properties": {
            "self": {
              "type": "string",
              "example": "$API_HOST/shipments/7b808eee-bf1c-40cd-98f2-3c335a06417e"
            }
          }
        }
      }
    }
  ]
}

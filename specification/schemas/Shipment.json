{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalShipment"
    },
    {
      "required": [
        "attributes",
        "relationships"
      ],
      "properties": {
        "id": {
          "readOnly": true
        },
        "attributes": {
          "type": "object",
          "required": [
            "recipient_address",
            "return_address",
            "sender_address",
            "physical_properties"
          ],
          "additionalProperties": false,
          "properties": {
            "recipient_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "first_name",
                    "last_name"
                  ]
                }
              ]
            },
            "recipient_tax_number": {
              "type": "string",
              "example": "H111111-11"
            },
            "return_address": {
              "$ref": "#/components/schemas/Address"
            },
            "sender_address": {
              "$ref": "#/components/schemas/Address"
            },
            "pickup_location": {
              "type": "object",
              "required": [
                "code",
                "address"
              ],
              "additionalProperties": false,
              "properties": {
                "code": {
                  "type": "string",
                  "example": "205604"
                },
                "address": {
                  "$ref": "#/components/schemas/Address"
                }
              },
              "description": "Required if the service delivery method is `pick-up`."
            },
            "description": {
              "type": [
                "string",
                "null"
              ],
              "example": "Fidget spinners",
              "description": "Description of the shipment (contents). This field is communicated to the carrier and may be put on the shipment's label."
            },
            "customer_reference": {
              "type": [
                "string",
                "null"
              ],
              "example": "#8008135",
              "description": "Internal reference for the customer to recognize the shipment by."
            },
            "channel": {
              "type": "string",
              "example": "Your integration name",
              "description": "Name of the application used to create the shipment."
            },
            "total_value": {
              "$ref": "#/components/schemas/Price"
            },
            "price": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Price"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "barcode": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789",
              "description": "Textual representation of the barcode present on the label."
            },
            "tracking_code": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789",
              "description": "Code used to request tracking status from the carrier. This is not necessarily the same as the shipment barcode."
            },
            "tracking_url": {
              "readOnly": true,
              "type": "string",
              "example": "https://tracker.carrier.com/3SABCD0123456789",
              "description": "URL used to view tracking status updates."
            },
            "sync_active": {
              "readOnly": true,
              "type": "boolean",
              "example": true,
              "description": "Indicates whether status updates will be performed for this shipment."
            },
            "physical_properties": {
              "$ref": "#/components/schemas/PhysicalProperties"
            },
            "verified": {
              "type": "object",
              "readOnly": true,
              "properties": {
                "price": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Price"
                    },
                    {
                      "readOnly": true
                    }
                  ]
                },
                "physical_properties": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/PhysicalProperties"
                    },
                    {
                      "readOnly": true
                    }
                  ]
                }
              }
            },
            "items": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ShipmentItem"
              }
            },
            "is_consolidation": {
              "type": "boolean",
              "example": true,
              "description": "Indicates whether this shipment is a consolidation shipment."
            },
            "customs": {
              "$ref": "#/components/schemas/BaseCustoms"
            },
            "register_at": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Timestamp"
                },
                {
                  "readOnly": false,
                  "description": "This shipment will be registered with the carrier when this time has been reached. While this is `null` or a time in the future, the shipment will stay in concept."
                }
              ]
            },
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "updated_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "synced_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "tags": {
              "type": ["array"],
              "items": {
                "type": "string",
                "description": "Any custom tag to give to a shipment. Used for reference purposes.",
                "example": "my-shipping-method"
              }
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "shop"
          ],
          "properties": {
            "contract": {
              "$ref": "#/components/schemas/ContractRelationship"
            },
            "consolidation_shipment": {
              "$ref": "#/components/schemas/ShipmentRelationship"
            },
            "files": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShipmentFilesRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "items": {
                        "properties": {
                          "id": {
                            "readOnly": true
                          },
                          "type": {
                            "readOnly": true
                          }
                        }
                      }
                    }
                  }
                }
              ]
            },
            "hook_logs": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/HookLogsRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "items": {
                        "properties": {
                          "id": {
                            "readOnly": true
                          },
                          "type": {
                            "readOnly": true
                          }
                        }
                      }
                    }
                  }
                }
              ]
            },
            "liability_coverage": {
              "$ref": "#/components/schemas/LiabilityCoverageRelationship"
            },
            "parent": {
              "$ref": "#/components/schemas/ShipmentRelationship"
            },
            "service": {
              "$ref": "#/components/schemas/ServiceRelationship"
            },
            "service_options": {
              "$ref": "#/components/schemas/ServiceOptionsRelationship"
            },
            "shipment_status": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/ShipmentStatusRelationship"
                },
                {
                  "properties": {
                    "data": {
                      "readOnly": true,
                      "properties": {
                        "id": {
                          "readOnly": true
                        },
                        "type": {
                          "readOnly": true
                        }
                      }
                    }
                  }
                }
              ]
            },
            "shop": {
              "$ref": "#/components/schemas/ShopRelationship"
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self",
            "files"
          ],
          "additionalProperties": false,
          "properties": {
            "self": {
              "type": "string",
              "format": "url",
              "example": "$API_HOST/shipments/7b808eee-bf1c-40cd-98f2-3c335a06417e"
            },
            "files": {
              "type": "string",
              "format": "url",
              "example": "$API_HOST/shipments/7b808eee-bf1c-40cd-98f2-3c335a06417e/files"
            }
          }
        }
      }
    }
  ]
}

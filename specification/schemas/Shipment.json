{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/MinimalShipment"
    },
    {
      "required": [
        "attributes",
        "relationships"
      ],
      "properties": {
        "attributes": {
          "type": "object",
          "required": [
            "recipient_address",
            "return_address",
            "sender_address",
            "physical_properties"
          ],
          "additionalProperties": false,
          "properties": {
            "recipient_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "street_1",
                    "city",
                    "country_code"
                  ]
                }
              ]
            },
            "return_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "street_1",
                    "city",
                    "country_code"
                  ]
                }
              ]
            },
            "sender_address": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Address"
                },
                {
                  "required": [
                    "street_1",
                    "city",
                    "country_code"
                  ]
                }
              ]
            },
            "pickup_location": {
              "type": "object",
              "required": [
                "code",
                "address"
              ],
              "additionalProperties": false,
              "properties": {
                "code": {
                  "type": "string",
                  "example": "205604"
                },
                "address": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Address"
                    },
                    {
                      "required": [
                        "street_1",
                        "city",
                        "country_code"
                      ]
                    }
                  ]
                }
              }
            },
            "description": {
              "type": "string",
              "example": "Order #8008135"
            },
            "price": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Price"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "insurance": {
              "$ref": "#/components/schemas/Price"
            },
            "barcode": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_code": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_url": {
              "readOnly": true,
              "type": "string",
              "example": "https://tracker.carrier.com/3SABCD0123456789"
            },
            "physical_properties": {
              "$ref": "#/components/schemas/PhysicalProperties"
            },
            "physical_properties_verified": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/PhysicalProperties"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "items": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ShipmentItem"
              }
            },
            "register_at": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Timestamp"
                },
                {
                  "readOnly": false,
                  "description": "This shipment will be registered with the carrier when this time has been reached. While this is `null` or a time in the future, the shipment will stay in concept."
                }
              ]
            },
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "updated_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "synced_at": {
              "$ref": "#/components/schemas/Timestamp"
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "shop",
            "service_contract"
          ],
          "properties": {
            "service_options": {
              "$ref": "#/components/schemas/ServiceOptionsRelationship"
            },
            "parent": {
              "$ref": "#/components/schemas/ShipmentRelationship"
            },
            "shop": {
              "$ref": "#/components/schemas/ShopRelationship"
            },
            "shipment_status": {
              "$ref": "#/components/schemas/ShipmentStatusRelationship"
            },
            "service_contract": {
              "$ref": "#/components/schemas/ServiceContractRelationship"
            },
            "files": {
              "$ref": "#/components/schemas/ShipmentFilesRelationship"
            }
          }
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "properties": {
            "self": {
              "type": "string",
              "example": "$API_HOST/shipments/7b808eee-bf1c-40cd-98f2-3c335a06417e"
            }
          }
        }
      }
    }
  ]
}

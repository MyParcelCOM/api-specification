{
  "type": "object",
  "allOf": [
    {
      "$ref": "#/components/schemas/BaseShipment"
    },
    {
      "required": [
        "attributes",
        "relationships"
      ],
      "properties": {
        "id": {
          "readOnly": true
        },
        "attributes": {
          "required": [
            "recipient_address",
            "return_address",
            "sender_address",
            "physical_properties"
          ],
          "additionalProperties": false,
          "properties": {
            "recipient_address": {
              "$ref": "#/components/schemas/Address"
            },
            "return_address": {
              "$ref": "#/components/schemas/Address"
            },
            "sender_address": {
              "$ref": "#/components/schemas/Address"
            },
            "pickup_location": {
              "required": [
                "code",
                "address"
              ],
              "properties": {
                "address": {
                  "$ref": "#/components/schemas/Address"
                }
              }
            },
            "price": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/Price"
                },
                {
                  "readOnly": true
                }
              ]
            },
            "insurance": {
              "$ref": "#/components/schemas/Price"
            },
            "barcode": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_code": {
              "readOnly": true,
              "type": "string",
              "example": "3SABCD0123456789"
            },
            "tracking_url": {
              "readOnly": true,
              "type": "string",
              "example": "https://tracker.carrier.com/3SABCD0123456789"
            },
            "physical_properties": {
              "$ref": "#/components/schemas/PhysicalProperties"
            },
            "physical_properties_verified": {
              "allOf": [
                {
                  "$ref": "#/components/schemas/PhysicalProperties"
                },
                {
                  "readOnly": true,
                  "properties": {
                    "height": {
                      "readOnly": true
                    },
                    "width": {
                      "readOnly": true
                    },
                    "length": {
                      "readOnly": true
                    },
                    "volume": {
                      "readOnly": true,
                    },
                    "weight": {
                      "readOnly": true
                    }
                  }
                }
              ]
            },
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "updated_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "synced_at": {
              "$ref": "#/components/schemas/Timestamp"
            }
          }
        },
        "relationships": {
          "type": "object",
          "required": [
            "shop",
            "service_contract"
          ]
        },
        "links": {
          "readOnly": true,
          "type": "object",
          "required": [
            "self"
          ],
          "properties": {
            "self": {
              "type": "string",
              "example": "$API_HOST/shipments/7b808eee-bf1c-40cd-98f2-3c335a06417e"
            }
          }
        }
      }
    }
  ]
}

{
  "type": "object",
  "required": [
    "id",
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^hooks$",
      "example": "hooks"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "example": "99c2917a-8cbe-4e04-b4ce-e43263b20332"
    },
    "attributes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "example": "DPD Next Day for medium packages"
        },
        "order": {
          "type": "integer",
          "example": 3,
          "description": "Priority of this hook, lower value means it is triggered first."
        },
        "active": {
          "type": "boolean",
          "example": true
        },
        "trigger": {
          "$ref": "#/components/schemas/HookTrigger"
        },
        "action": {
          "$ref": "#/components/schemas/HookAction"
        }
      }
    }
  }
}

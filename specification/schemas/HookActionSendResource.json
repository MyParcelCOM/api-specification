{
  "type": "object",
  "required": [
    "action_type",
    "values"
  ],
  "additionalProperties": false,
  "properties": {
    "action_type": {
      "type": "string",
      "pattern": "^send-resource$",
      "example": "send-resource"
    },
    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "url"
        ],
        "additionalProperties": false,
        "properties": {
          "url": {
            "type": "string",
            "example": "https://foo.bar"
          },
          "secret": {
            "type": "string",
            "example": "some.secret.string.only.the.endpoint.holder.knows"
          },
          "includes": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "status"
            }
          }
        }
      }
    }
  }
}

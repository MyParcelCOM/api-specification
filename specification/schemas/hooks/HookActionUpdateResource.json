      "type": "string",
      "pattern": "^update-resource$",
      "example": "update-resource"
    },
    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "pointer",
          "value"
        ],
        "additionalProperties": false,
        "properties": {
          "pointer": {
            "type": "string",
            "maxLength": 255,
            "example": "/relationships/service/data/id"
          },
          "value": {
            "type": [
              "string",
              "number",
              "object",
              "array"
            ],
            "example": "175a235f-aff5-4e44-87b5-3657b75c1deb",
            "description": "The value to set in the field targeted by the pointer."
          },
          "converter": {
            "type": "string",
            "enum": [
              "service-code-to-id"
            ],
            "description": "Attempts to convert the 'value' property according to a valid converter.",
            "example": "service-code-to-id"
          }
        }
      }
    }
  }
}

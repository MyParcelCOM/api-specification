{
  "type": "object",
  "required": [
    "action_type",
    "values"
  ],
  "additionalProperties": false,
  "properties": {
    "action_type": {
      "type": "string",
      "pattern": "^request-payment$",
      "example": "request-payment"
    },
    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "price"
        ],
        "additionalProperties": false,
        "properties": {
          "price": {
            "$ref": "#/components/schemas/Price"
          }
        }
      }
    }
  }
}

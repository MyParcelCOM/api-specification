{
  "allOf": [
    {
      "$ref": "#/components/schemas/DemoOrderResource"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^demo-orders$",
          "example": "demo-orders"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "created_at": {
              "$ref": "#/components/schemas/Timestamp"
            },
            "recipient_address": {
              "$ref": "#/components/schemas/BaseAddress"
            },
            "items": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/OrderItem"
              },
              "minItems": 1
            },
            "outbound_shipment_identifier": {
              "type": "string",
              "description": "Shipment identifier of the outbound shipment",
              "example": "93011952"
            },
            "is_third_party": {
              "type": "boolean",
              "description": "Indicates whether the demo order should be handled by a third party",
              "default": false
            }
          }
        }
      }
    }
  ]
}

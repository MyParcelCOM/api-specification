{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Invitation.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "email",
        "name",
        "message"
      ],
      "additionalProperties": false,
      "properties": {
        "code": {
          "readOnly": true,
          "type": "string",
          "example": "c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        },
        "email": {
          "$ref": "../includes/email.json"
        },
        "name": {
          "type": "string",
          "example": "James Johnson"
        },
        "message": {
          "type": "string",
          "example": "Hi James, this is your invitation to join myparcel.com"
        },
        "status": {
          "readOnly": true,
          "type": "string",
          "enum": [
            "pending",
            "accepted"
          ],
          "example": "pending"
        }
      }
    },
    "links": {
      "readOnly": true,
      "type": "object",
      "required": [
        "self"
      ],
      "properties": {
        "self": {
          "type": "string",
          "example": "$base_url/invitations/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        }
      }
    }
  }
}

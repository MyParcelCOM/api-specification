{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "properties": {
    "type": {
      "$ref": "../types/Shop.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "name",
        "billing_address",
        "return_address"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "example": "MyParcel.com"
        },
        "billing_address": {
          "$ref": "#/definitions/AddressAttributes"
        },
        "return_address": {
          "$ref": "#/definitions/AddressAttributes"
        }
      }
    },
    "relationships": {
      "type": "object",
      "properties": {
        "region": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Region.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/regions/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        }
      }
    }
  }
}

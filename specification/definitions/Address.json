{
  "type": "object",
  "required": [
    "addressline_1",
    "city",
    "country_code"
  ],
  "properties": {
    "street": {
      "type": "string",
      "example": "Hoofdweg"
    },
    "addition": {
      "type": "string",
      "example": "Apartment 3"
    },
    "number": {
      "type": "number",
      "example": 679
    },
    "number_suffix": {
      "type": "string",
      "example": "b"
    },
    "postal_code": {
      "type": "string",
      "example": "2131BC"
    },
    "city": {
      "type": "string",
      "example": "Hoofddorp"
    },
    "region_code": {
      "type": "string",
      "pattern": "[A-Z]{3}"
    },
    "country_code": {
      "type": "string",
      "pattern": "[A-Z]{2}",
      "example": "NL"
    },
    "person": {
      "type": "string",
      "example": "John Doe"
    }
  }
}

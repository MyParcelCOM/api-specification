{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^webhooks$",
      "example": "webhooks"
    },
    "attributes": {
      "type": "object",
      "required": [
        "name",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "example": "shipment_status_change"
        },
        "description": {
          "type": "string",
          "example": "Whenever a shipment has a status change, this webhook is called."
        }
      }
    }
  }
}

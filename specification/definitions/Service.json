{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Service.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "name",
        "package_type",
        "handover_method"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "example": "Parcel to Parcelshop"
        },
        "package_type": {
          "type": "string",
          "enum": [
            "letter",
            "letterbox",
            "parcel",
            "unstamped"
          ],
          "example": "parcel"
        },
        "delivery_days": {
          "type": "array",
          "items": {
            "$ref": "../includes/day.json"
          },
          "example": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ]
        },
        "transit_time": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "min": {
              "type": "number",
              "example": 1
            },
            "max": {
              "type": "number",
              "example": 3
            }
          }
        },
        "handover_method": {
          "type": "string",
          "enum": [
            "drop-off",
            "collection"
          ],
          "example": "drop-off"
        },
        "rating": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "example": 0.8,
          "description": "Generic rating of the service which indicates a combination of price, quality and popularity"
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": [
        "carrier",
        "region_from",
        "region_to"
      ],
      "additionalProperties": false,
      "properties": {
        "carrier": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Carrier.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "required": [
                "related"
              ],
              "additionalProperties": false,
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/carriers/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "region_from": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Region.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "required": [
                "related"
              ],
              "additionalProperties": false,
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/regions/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "region_to": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Region.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "required": [
                "related"
              ],
              "additionalProperties": false,
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/regions/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        }
      }
    },
    "links": {
      "readOnly": true,
      "type": "object",
      "required": [
        "self",
        "contracts"
      ],
      "additionalProperties": false,
      "properties": {
        "self": {
          "type": "string",
          "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        },
        "contracts": {
          "type": "string",
          "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/contracts"
        }
      }
    }
  }
}

{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/User.json"
    },
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "username",
        "email"
      ],
      "additionalProperties": false,
      "properties": {
        "username": {
          "type": "string",
          "example": "johndoe"
        },
        "email": {
          "type": "string",
          "example": "john@doe.com"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "active",
            "blocked"
          ],
          "example": "active"
        }
      }
    }
  }
}

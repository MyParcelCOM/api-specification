{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^system-messages$",
      "example": "system-messages"
    },
    "attributes": {
      "type": "object",
      "required": [
        "type",
        "filter",
        "content"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "example": "alert"
        },
        "filter": {
          "type": "string",
          "example": "shipment"
        },
        "content": {
          "type": "string",
          "example": "Carrier X is currently not available"
        }
      }
    }
  }
}

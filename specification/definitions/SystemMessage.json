{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^system-messages$",
      "example": "system-messages"
    },
    "attributes": {
      "type": "object",
      "required": [
        "type",
        "content"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "info",
            "success",
            "warning",
            "error"
          ],
          "example": "info"
        },
        "filter": {
          "type": "string",
          "example": "shipment"
        },
        "content": {
          "type": "string",
          "example": "Information regarding shipments"
        }
      }
    }
  }
}

{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^weight-groups$",
      "example": "weight-groups"
    },
    "attributes": {
      "type": "object",
      "required": [
        "weight_min",
        "weight_max",
        "price"
      ],
      "additionalProperties": false,
      "properties": {
        "weight_min": {
          "type": "number",
          "example": "10"
        },
        "weight_max": {
          "type": "number",
          "example": "20"
        },
        "price": {
          "$ref": "../definitions/Price.json"
        },
        "step_price": {
          "$ref": "../definitions/Price.json"
        },
        "step_size": {
          "type": "string",
          "example": "1"
        }
      }
    }
  }
}

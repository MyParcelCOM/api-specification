{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/Status.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "code",
        "resource_type",
        "name",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string",
          "enum": [
            "shipment_concept",
            "shipment_registered",
            "shipment_at_carrier",
            "shipment_at_sorting",
            "shipment_at_courier",
            "shipment_delivered",
            "shipment_inactive",
            "shipment_failed"
          ],
          "example": "shipment_delivered"
        },
        "resource_type": {
          "type": "string",
          "enum": [
            "shipments"
          ],
          "example": "shipments"
        },
        "level": {
          "type": "string",
          "enum": [
            "pending",
            "success",
            "failed"
          ],
          "example": "success"
        },
        "name": {
          "type": "string",
          "example": "Delivered"
        },
        "description": {
          "type": "string",
          "example": "The shipment has been delivered"
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "resource_data": {
          "type": "object",
          "properties": {
            "carrier_status_code": {
              "type": "string",
              "example": "9001"
            },
            "carrier_status_description": {
              "type": "string",
              "example": "Confirmed at destination"
            },
            "carrier_timestamp": {
              "$ref": "../includes/read-only-timestamp.json"
            }
          }
        }
      }
    },
    "links": {
      "readOnly": true,
      "type": "object",
      "required": [
        "self"
      ],
      "properties": {
        "self": {
          "type": "string",
          "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        }
      }
    }
  }
}

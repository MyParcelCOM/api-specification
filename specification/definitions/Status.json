{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "$ref": "../types/Status.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "code",
        "name",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "number",
          "example": 123
        },
        "name": {
          "type": "string",
          "example": "Delivered"
        },
        "level": {
          "type": "string",
          "enum": [
            "pending",
            "success",
            "failed"
          ],
          "example": "success"
        },
        "description": {
          "type": "string",
          "example": "The shipment has been delivered"
        }
      }
    },
    "links": {
      "type": "object",
      "required": [
        "self"
      ],
      "properties": {
        "self": {
          "type": "string",
          "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        }
      }
    }
  }
}

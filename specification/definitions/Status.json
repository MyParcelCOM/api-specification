{
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^statuses$",
      "example": "statuses"
    },
    "attributes": {
      "type": "object",
      "required": [
        "carrier_code",
        "code",
        "name",
        "description"
      ],
      "additionalProperties": false,
      "properties": {
        "carrier_code": {
          "type": "string",
          "example": "A01"
        },
        "code": {
          "type": "number",
          "example": 123
        },
        "name": {
          "type": "string",
          "example": "pending"
        },
        "description": {
          "type": "string",
          "example": "The shipment is created"
        }
      }
    }
  }
}

{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "type": {
      "type": "string",
      "pattern": "^pickup-dropoff-locations$",
      "example": "pickup-dropoff-locations"
    },
    "attributes": {
      "type": "object",
      "required": [
        "code",
        "address"
      ],
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string",
          "example": "123456"
        },
        "address": {
          "$ref": "#/definitions/AddressAttributes"
        },
        "opening_hours": {
          "type": "array",
          "items": {
            "$ref": "../definitions/OpeningHours.json"
          },
          "minItems": 7,
          "maxItems": 7
        },
        "position": {
          "$ref": "../definitions/Position.json"
        }
      }
    },
    "relationships": {
      "type": "object",
      "properties": {
        "carrier": {
          "type": "object",
          "properties": {
            "data":{
              "type": "object",
              "properties": {
                "id": {
                  "$ref": "../definitions/Uuid.json"
                },
                "type": {
                  "type": "string",
                  "example": "carriers"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/PickupDropoffLocation.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "code",
        "address"
      ],
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "string",
          "example": "123456"
        },
        "address": {
          "type": "object",
          "required": [
            "street_1",
            "street_number",
            "city",
            "country_code",
            "company"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "opening_hours": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "day"
            ],
            "additionalProperties": false,
            "properties": {
              "day": {
                "$ref": "../includes/day.json"
              },
              "open": {
                "$ref": "../includes/time.json"
              },
              "closed": {
                "$ref": "../includes/time.json"
              }
            }
          },
          "maxItems": 7
        },
        "position": {
          "type": "object",
          "required": [
            "latitude",
            "longitude"
          ],
          "additionalProperties": false,
          "properties": {
            "latitude": {
              "type": "number",
              "example": 52.3050097
            },
            "longitude": {
              "type": "number",
              "example": 4.689905
            },
            "distance": {
              "type": "number",
              "example": 1337,
              "description": "Distance to the location in meters"
            }
          }
        }
      }
    },
    "relationships": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "carrier"
      ],
      "properties": {
        "carrier": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Carrier.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/carriers/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        }
      }
    }
  }
}

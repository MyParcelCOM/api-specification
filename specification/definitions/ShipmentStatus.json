{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "$ref": "../types/ShipmentStatus.json"
    },
    "id": {
      "$ref": "../definitions/ReadOnlyUuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "carrier_code",
        "date"
      ],
      "additionalProperties": false,
      "properties": {
        "carrier_code": {
          "type": "string",
          "example": "A01"
        },
        "date": {
          "type": "string",
          "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}",
          "example": "2017-07-13 17:30:00"
        }
      }
    },
    "relationships": {
      "type": "object",
      "properties": {
        "shipment": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Shipment.json"
                },
                "id": {
                  "$ref": "../definitions/Uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "status": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Status.json"
                },
                "id": {
                  "$ref": "../definitions/Uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "type": "object",
  "required": [
    "type",
    "attributes",
    "relationships"
  ],
  "properties": {
    "type": {
      "$ref": "../types/Shipment.json"
    },
    "id": {
      "$ref": "../includes/read-only-uuid.json"
    },
    "attributes": {
      "type": "object",
      "required": [
        "recipient_address",
        "weight"
      ],
      "additionalProperties": false,
      "properties": {
        "recipient_address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "sender_address": {
          "type": "object",
          "required": [
            "street_1",
            "city",
            "country_code"
          ],
          "additionalProperties": false,
          "properties": {
            "$ref": "../properties/Address.json"
          }
        },
        "pickup_location": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "example": "123456"
            },
            "address": {
              "type": "object",
              "required": [
                "street_1",
                "city",
                "country_code"
              ],
              "additionalProperties": false,
              "properties": {
                "$ref": "../properties/Address.json"
              }
            }
          }
        },
        "description": {
          "type": "string",
          "example": "order #8008135"
        },
        "price": {
          "$ref": "../includes/read-only-price.json"
        },
        "insurance": {
          "$ref": "../includes/price.json"
        },
        "barcode": {
          "readOnly": true,
          "type": "string",
          "example": "3SABCD0123456789"
        },
        "weight": {
          "type": "number",
          "example": 24
        },
        "physical_properties": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "height": {
              "type": "number",
              "example": 24
            },
            "width": {
              "type": "number",
              "example": 50
            },
            "length": {
              "type": "number",
              "example": 50
            },
            "volume": {
              "type": "number",
              "example": 50
            },
            "weight": {
              "type": "number",
              "example": 24
            }
          }
        },
        "created_at": {
          "$ref": "../includes/read-only-timestamp.json"
        },
        "updated_at": {
          "$ref": "../includes/read-only-timestamp.json"
        },
        "synced_at": {
          "$ref": "../includes/read-only-timestamp.json"
        }
      }
    },
    "relationships": {
      "type": "object",
      "required": [
        "shop",
        "service",
        "contract"
      ],
      "properties": {
        "service_options": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "id"
                ],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "$ref": "../types/ServiceOption.json"
                  },
                  "id": {
                    "$ref": "../includes/uuid.json"
                  }
                }
              }
            }
          }
        },
        "parent": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Shipment.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "shop": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Shop.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "status": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Status.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Service.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            },
            "links": {
              "readOnly": true,
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
                }
              }
            }
          }
        },
        "contract": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "id"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Contract.json"
                },
                "id": {
                  "$ref": "../includes/uuid.json"
                }
              }
            }
          }
        },
        "files": {
          "readOnly": true,
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "id"
                ],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "$ref": "../types/File.json"
                  },
                  "id": {
                    "$ref": "../includes/uuid.json"
                  }
                }
              }
            },
            "links": {
              "type": "object",
              "properties": {
                "related": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0/files"
                }
              }
            }
          }
        }
      }
    },
    "links": {
      "readOnly": true,
      "type": "object",
      "properties": {
        "self": {
          "type": "string",
          "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0"
        }
      }
    }
  }
}

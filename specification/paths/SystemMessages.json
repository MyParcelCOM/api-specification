{
  "get": {
    "tags": [
      "SystemMessages"
    ],
    "summary": "Get all the system messages.",
    "description": "Get all the system messages.",
    "responses": {
      "200": {
        "description": "Retrieved the system message(s).",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SystemMessage"
              }
            },
            "meta": {
              "type": "object",
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "SystemMessages"
    ],
    "summary": "Get all the system messages.",
    "description": "This endpoint retrieves system messages.",
    "responses": {
      "200": {
        "description": "Retrieved the system message(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SystemMessage"
              }
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/system-messages?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "SystemMessages"
    ],
    "summary": "Create a new system message.",
    "description": "This endpoint creates a new system message with the posted data.",
    "parameters": [
      {
        "in": "body",
        "name": "system-message",
        "description": "The system message object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/SystemMessage"
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Created the system message.",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/SystemMessage"
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "SystemMessages"
    ],
    "summary": "Delete system messages by id.",
    "description": "This endpoint deletes the system message(s) with the supplied ids.",
    "parameters": [
      {
        "in": "body",
        "name": "system-messages",
        "description": "The system message(s) to be deleted.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "id"
                ],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "$ref": "../types/SystemMessage.json"
                  },
                  "id": {
                    "$ref": "../definitions/Uuid.json"
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "202": {
        "description": "The system message(s) will be deleted."
      },
      "204": {
        "description": "The system message(s) are deleted."
      }
    }
  }
}

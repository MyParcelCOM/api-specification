{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-return_id"
    }
  ],
  "post": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Add tags to the return.",
    "description": "This endpoint adds return tags to the return.",
    "requestBody": {
      "description": "The return tag ids to be set on the return.",
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "properties": {
              "data": {
                "type": "object",
                "required": [
                  "return_tag_ids"
                ],
                "properties": {
                  "return_tag_ids": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Uuid",
                      "example": "35eddf50-1d84-47a3-8479-6bfda729cd99"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "The tags are attached to the return."
      },
      "404": {
        "description": "No return or return tag was found for the given ID."
      },
      "422": {
        "description": "This modification is not allowed on this return."
      }
    }
  }
}

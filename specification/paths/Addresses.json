{
  "get": {
    "tags": [
      "Addresses"
    ],
    "summary": "Get all the addresses.",
    "description": "This endpoint retrieves addresses.",
    "responses": {
      "200": {
        "description": "Retrieved the address(es).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Address"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/addresses?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/addresses?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/addresses?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/addresses?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/addresses?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Addresses"
    ],
    "summary": "Create a new address.",
    "description": "This endpoint creates a new address with the posted data.",
    "parameters": [
      {
        "in": "body",
        "name": "address",
        "description": "The address object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Address"
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Created the address.",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Address"
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Addresses"
    ],
    "summary": "Delete addresses by id.",
    "description": "This endpoint deletes the address(es) with the supplied ids.",
    "parameters": [
      {
        "name": "addresses",
        "in": "body",
        "description": "The address(es) to be deleted.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "id"
                ],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "$ref": "../types/Address.json"
                  },
                  "id": {
                    "$ref": "../includes/uuid.json"
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "202": {
        "description": "The address(es) will be deleted."
      },
      "204": {
        "description": "The address(es) are deleted."
      }
    }
  }
}

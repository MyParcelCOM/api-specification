{
  "get": {
    "tags": [
      "Organizations"
    ],
    "summary": "Get all the organizations.",
    "description": "This endpoint retrieves organizations.",
    "responses": {
      "200": {
        "description": "Retrieved the organizations.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Organization"
                      },
                      {
                        "required": [
                          "id",
                          "attributes",
                          "relationships",
                          "links"
                        ],
                        "properties": {
                          "attributes": {
                            "type": "object",
                            "required": [
                              "name"
                            ]
                          },
                          "relationships": {
                            "type": "object",
                            "required": [
                              "broker"
                            ],
                            "properties": {
                              "broker": {
                                "$ref": "#/components/schemas/BrokerRelationship"
                              }
                            }
                          },
                          "links": {
                            "required": [
                              "self"
                            ]
                          }
                        }
                      }
                    ]
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/organizations?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/organizations?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/organizations?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/organizations?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/organizations?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Organizations"
    ],
    "summary": "Create a new organization.",
    "description": "This endpoint creates a new organization with the posted data.",
    "requestBody": {
      "description": "The organization object to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/Organization"
                  },
                  {
                    "required": [
                      "attributes",
                      "relationships"
                    ],
                    "properties": {
                      "id": {
                        "readOnly": true
                      },
                      "attributes": {
                        "type": "object",
                        "required": [
                          "name"
                        ]
                      },
                      "relationships": {
                        "type": "object",
                        "required": [
                          "broker"
                        ],
                        "properties": {
                          "broker": {
                            "$ref": "#/components/schemas/BrokerRelationship"
                          }
                        }
                      },
                      "links": {
                        "properties": {
                          "self": {
                            "readOnly": true
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "The organization is created.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Organization"
                    },
                    {
                      "required": [
                        "id",
                        "attributes",
                        "relationships",
                        "links"
                      ],
                      "properties": {
                        "attributes": {
                          "type": "object",
                          "required": [
                            "name"
                          ]
                        },
                        "relationships": {
                          "type": "object",
                          "required": [
                            "broker"
                          ],
                          "properties": {
                            "broker": {
                              "$ref": "#/components/schemas/BrokerRelationship"
                            }
                          }
                        },
                        "links": {
                          "required": [
                            "self"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}

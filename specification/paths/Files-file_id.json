{
  "get": {
    "tags": [
      "Files"
    ],
    "parameters": [
      {
        "in": "path",
        "name": "file_id",
        "required": true,
        "type": "string",
        "description": "The file id, or a comma separated list of file ids."
      },
      {
        "in": "header",
        "name": "Accept",
        "required": true,
        "type": "string",
        "enum": [
          "application/json",
          "application/pdf",
          "image/png"
        ],
        "description": "You can set the file header to either receive a json response, or the physical files in given format. Possible options are: application/json, application/pdf, image/png"
      },
      {
        "in": "query",
        "name": "filter[page_size]",
        "type": "string",
        "default": "A4",
        "enum": [
          "A4",
          "A6"
        ],
        "description": "When requesting multiple files with the Accept header set to \"application/pdf\" this filter determines the page size in the pdf. A page with size A4 will hold 4 files, while an A6 page will only hold 1."
      },
      {
        "in": "query",
        "name": "filter[start_position]",
        "type": "string",
        "default": "top-left",
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right"
        ],
        "description": "This filter only applies when requesting mulitple files with the Accept header set to \"application/pdf\" and the page size set to A4. It determines the position of the file on the first page."
      }
    ],
    "produces": [
      "application/json",
      "application/pdf",
      "image/png"
    ],
    "summary": "Retrieve files by id.",
    "description": "",
    "responses": {
      "200": {
        "description": "Retrieved the file(s).",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/File"
              }
            },
            "meta": {
              "type": "object",
              "properties": {
                "total-pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/files/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/files/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/files/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/files/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/files/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

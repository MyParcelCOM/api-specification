{
  "get": {
    "tags": [
      "Shipments"
    ],
    "summary": "Get all the shipments.",
    "description": "This endpoint retrieves shipments.",
    "parameters": [
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated string of the relationship names you want to include the data of.<br> The relationships that can be included are:<ul><li>files</li><li>service_contract</li><li>service_contract.service</li><li>service_options</li><li>shop</li><li>shipment_status</li></ul>",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[search]",
        "in": "query",
        "description": "String of characters you want to look for in a shipment's attributes. Available fields to look in are:<ul><li>date created (YYYY-MM-DD)</li><li>description</li><li>recipient_address</li><li>tracking_code</li></ul>",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[shop]",
        "in": "query",
        "description": "Comma separated string of shop ids to filter by.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[carrier]",
        "in": "query",
        "description": "Comma separated string of carrier ids to filter by.",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipments.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/Shipment"
                      },
                      {
                        "$ref": "#/components/schemas/InternationalShipment"
                      }
                    ],
                    "example": {
                      "$ref": "#/components/examples/ShipmentResponse"
                    }
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Shipments"
    ],
    "summary": "Create a new shipment.",
    "description": "This endpoint creates a new shipment with the posted data.",
    "requestBody": {
      "description": "The shipment object to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "oneOf": [
                  {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Shipment"
                      },
                      {
                        "properties": {
                          "id": {
                            "readOnly": true
                          }
                        }
                      }
                    ]
                  },
                  {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/InternationalShipment"
                      },
                      {
                        "properties": {
                          "id": {
                            "readOnly": true
                          }
                        }
                      }
                    ]
                  }
                ],
                "example": {
                  "$ref": "#/components/examples/PostShipmentRequest"
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "The shipment is created.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "$ref": "#/components/schemas/InternationalShipment"
                    }
                  ],
                  "example": {
                    "$ref": "#/components/examples/ShipmentResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

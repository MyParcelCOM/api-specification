{
  "get": {
    "tags": [
      "Shipments"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage"
        ]
      }
    ],
    "summary": "Get all available shipments for your API client.",
    "description": "This endpoint retrieves all shipments available to your API client.",
    "parameters": [
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated string of the relationship names you want to include the data of.<br>The relationships that can be included are:<ul><li>`files`</li><li>`service`</li><li>`contract`</li><li>`service_options`</li><li>`shipment_status`</li><li>`shipment_status.status`</li><li>`shop`</li><li>`hook_logs`</li></ul>",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[search]",
        "in": "query",
        "description": "String of characters you want to look for in a shipment's attributes. Available fields to look in are:<ul><li>`date_created` (YYYY-MM-DD). <strong>Deprecated</strong> use `filter[date_from]` and `filter[date_to]` instead.</li><li>`description`</li><li>`recipient_address`</li><li>`tracking_code`</li></ul>",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[date_from]",
        "in": "query",
        "description": "Date string in ISO 8601 date format (YYYY-MM-DD). Only shipments created at >= this date will be in the response.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[date_to]",
        "in": "query",
        "description": "Date string in ISO 8601 date format (YYYY-MM-DD). Only shipments created at <= this date will be in the response.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[shop]",
        "in": "query",
        "description": "Comma separated string of shop ids to filter by.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[carrier]",
        "in": "query",
        "description": "Comma separated string of carrier ids to filter by.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[current_status_code]",
        "in": "query",
        "description": "Comma separated string of status codes to filter by. Only shipments with the a current status that corresponds with one of the status codes will be in the response.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[service_code]",
        "in": "query",
        "description": "Comma separated string of service codes to filter by. Only shipments with a service that corresponds with one of the service codes will be in the response.",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipments.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Shipment"
                      },
                      {
                        "required": [
                          "id",
                          "links"
                        ],
                        "properties": {
                          "attributes": {
                            "required": [
                              "recipient_address",
                              "return_address",
                              "sender_address",
                              "physical_properties",
                              "sync_active",
                              "created_at",
                              "updated_at"
                            ]
                          },
                          "relationships": {
                            "required": [
                              "shop",
                              "shipment_status"
                            ]
                          }
                        }
                      }
                    ]
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/shipments?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Shipments"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage"
        ]
      }
    ],
    "summary": "Create a new shipment.",
    "description": "This endpoint creates a new shipment with the posted data.",
    "requestBody": {
      "description": "The shipment object to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "$ref": "#/components/schemas/Shipment"
              },
              "meta":  {
                "type": "object",
                "properties": {
                  "label_mime_type": {
                    "type": "string",
                    "example": "application/pdf"
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "The shipment is created.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "required": [
                        "id",
                        "links"
                      ]
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}

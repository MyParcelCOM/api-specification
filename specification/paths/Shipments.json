{
  "get": {
    "tags": [
      "Shipments"
    ],
    "summary": "Get all the shipments.",
    "description": "This endpoint retrieves shipments.",
    "responses": {
      "200": {
        "description": "Retrieved the shipment(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Shipment"
              }
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/shipments?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/shipments?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/shipments?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/shipments?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/shipments?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Shipments"
    ],
    "summary": "Create a new shipment.",
    "description": "This endpoint creates a new shipment with the posted data.",
    "parameters": [
      {
        "name": "shipment",
        "in": "body",
        "description": "The shipment object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Shipment"
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Created the shipment.",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Shipment"
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Shipments"
    ],
    "summary": "Delete shipments by id.",
    "description": "This endpoint deletes the shipment(s) with the supplied ids.",
    "parameters": [
      {
        "in": "body",
        "name": "shipments",
        "description": "The shipment(s) to be deleted.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "type",
                  "id"
                ],
                "additionalProperties": false,
                "properties": {
                  "type": {
                    "$ref": "../types/Shipment.json"
                  },
                  "id": {
                    "$ref": "../includes/uuid.json"
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "202": {
        "description": "The shipment(s) will be deleted."
      },
      "204": {
        "description": "The shipment(s) are deleted."
      }
    }
  }
}

{
  "get": {
    "tags": [
      "ServiceContracts"
    ],
    "summary": "Get all the service contracts.",
    "description": "This endpoint retrieves all the service contracts.",
    "parameters": [
      {
        "name": "filter[carrier_contract]",
        "in": "query",
        "description": "Comma separated string of carrier contract ids to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[service]",
        "in": "query",
        "description": "Comma separated string of service ids to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[shop]",
        "in": "query",
        "description": "Comma separated string of shop ids to filter on shops that have access to the service-contracts.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated list of relationship names you want to include the data of.<br> The relationships that can be included are:<ul><li>carrier_contract</li><li>service_groups</li><li>service_option_prices</li><li>service_option_prices.service_option</li></ul>",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the service contracts",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ServiceContract"
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

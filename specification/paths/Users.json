{
  "get": {
    "tags": [
      "Users"
    ],
    "summary": "Get all the users.",
    "description": "This endpoint retrieves users.",
    "responses": {
      "200": {
        "description": "Retrieved the user(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/users?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/users?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/users?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/users?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/users?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Users"
    ],
    "summary": "Create a new user.",
    "description": "This endpoint creates a new user with the posted data. <strong>A registration confirmation will be sent via email.</strong>",
    "parameters": [
      {
        "in": "body",
        "name": "user",
        "description": "The user object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "attributes"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/User.json"
                },
                "id": {
                  "$ref": "../includes/read-only-uuid.json"
                },
                "attributes": {
                  "type": "object",
                  "required": [
                    "first_name",
                    "last_name",
                    "company",
                    "email",
                    "phone_number"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "$ref": "../properties/User.json"
                  }
                },
                "meta": {
                  "type": "object",
                  "properties": {
                    "shop_name": {
                      "type": "string",
                      "example": "my.webshop.com"
                    },
                    "invitation_code": {
                      "type": "string",
                      "example": "15317471056093"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "202": {
        "description": "The user is created."
      }
    }
  }
}

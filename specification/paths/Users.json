{
  "get": {
    "tags": [
      "Users"
    ],
    "summary": "Get all the users.",
    "description": "This endpoint retrieves users.",
    "responses": {
      "200": {
        "description": "Retrieved the users.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/User"
                      },
                      {
                        "properties": {
                          "attributes": {
                            "type": "object",
                            "required": [
                              "first_name",
                              "last_name",
                              "company",
                              "email",
                              "phone_number"
                            ]
                          }
                        }
                      }
                    ]
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/users?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/users?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/users?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/users?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/users?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Users"
    ],
    "summary": "Create a new user.",
    "description": "This endpoint creates a new user with the posted data. <strong>A registration confirmation will be sent via email.</strong>",
    "requestBody": {
      "description": "The user object to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/User"
                  },
                  {
                    "properties": {
                      "id": {
                        "readOnly": true
                      },
                      "attributes": {
                        "required": [
                          "first_name",
                          "last_name",
                          "email"
                        ]
                      }
                    }
                  }
                ]
              },
              "meta": {
                "type": "object",
                "properties": {
                  "shop_name": {
                    "type": "string",
                    "example": "my.webshop.com"
                  },
                  "invitation_code": {
                    "type": "string",
                    "example": "15317471056093"
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "The user is created."
      }
    }
  }
}

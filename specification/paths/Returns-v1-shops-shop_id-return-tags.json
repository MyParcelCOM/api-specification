{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-shop_id"
    }
  ],
  "get": {
    "tags": [
      "ReturnTags"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Get all return tags for the given shop.",
    "description": "This endpoint retrieves return tags for the given shop.",
    "responses": {
      "200": {
        "description": "Retrieved the return tags for the given shop.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReturnTagResponse"
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/return-tags?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/return-tags?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/return-tags?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/return-tags?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/return-tags?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "No return tags were found with the given shop."
      }
    }
  }
}

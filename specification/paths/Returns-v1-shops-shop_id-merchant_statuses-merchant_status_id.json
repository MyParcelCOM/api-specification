{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-shop_id"
    },
    {
      "$ref": "#/components/parameters/path-merchant_status_id"
    }
  ],
  "get": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Get a return merchant status.",
    "description": "This endpoint retrieves a return merchant status by id.",
    "responses": {
      "200": {
        "description": "Retrieved the return merchant status.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "$ref": "#/components/schemas/MerchantStatusResponse"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "No return merchant status was found for the given ID."
      }
    }
  },
  "patch": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Update a shop's return merchant status by ID.",
    "description": "This endpoint updates a shop's return merchant status.",
    "requestBody": {
      "description": "The shop return merchant status object with attributes to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/MerchantStatus"
                  },
                  {
                    "required": [
                      "id"
                    ],
                    "properties": {
                      "relationships": {
                        "readOnly": true
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "The return merchant status has been updated for the specified shop.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "$ref": "#/components/schemas/MerchantStatusResponse"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "No merchant return status was found with the given shop."
      }
    }
  },
  "delete": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Delete return merchant status.",
    "description": "This endpoint deletes a return merchant status.",
    "responses": {
      "204": {
        "description": "The return merchant status is deleted."
      },
      "403": {
        "description": "The requesting access token does not have the correct permissions to delete this merchant status."
      }
    }
  }
}

{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-shop_id"
    },
    {
      "$ref": "#/components/parameters/path-merchant_status_id"
    }
  ],
  "patch": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Update a shop's merchant status by ID.",
    "description": "This endpoint updates a shop's merchant status.",
    "requestBody": {
      "description": "The shop merchant status object with attributes to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/MerchantStatus"
                  },
                  {
                    "required": [
                      "id"
                    ],
                    "properties": {
                      "relationships": {
                        "readOnly": true
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "The shop's merchant status has been updated"
      },
      "404": {
        "description": "No merchant status was found with the given shop."
      }
    }
  },
  "delete": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Delete merchant status.",
    "description": "This endpoint deletes a merchant status.",
    "responses": {
      "204": {
        "description": "The merchant status is deleted."
      },
      "404": {
        "description": "No merchant status was found with the given merchant status and shop."
      }
    }
  }
}

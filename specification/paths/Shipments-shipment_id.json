{
  "get": {
    "tags": [
      "Shipments"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage"
        ]
      }
    ],
    "summary": "Get a shipment by id.",
    "description": "This endpoint retrieves the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      },
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated string of the relationship names you want to include the data of.<br>The relationships that can be included are:<ul><li>`files`</li><li>`service`</li><li>`contract`</li><li>`service_options`</li><li>`shipment_status`</li><li>`shipment_status.status`</li><li>`shop`</li><li>`hook_logs`</li></ul>",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipment.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "required": [
                        "id",
                        "links"
                      ],
                      "properties": {
                        "attributes": {
                          "required": [
                            "recipient_address",
                            "return_address",
                            "sender_address",
                            "physical_properties",
                            "created_at",
                            "updated_at"
                          ]
                        },
                        "relationships": {
                          "required": [
                            "shop",
                            "shipment_status"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "patch": {
    "tags": [
      "Shipments"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage"
        ]
      }
    ],
    "summary": "Update a shipment by id.",
    "description": "This endpoint updates the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      }
    ],
    "requestBody": {
      "description": "The shipment object with attributes to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "$ref": "#/components/schemas/PatchShipment"
              },
              "meta":  {
                "type": "object",
                "properties": {
                  "label_mime_type": {
                    "type": "string",
                    "example": "application/pdf"
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "The shipment is updated.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "required": [
                        "id",
                        "links"
                      ],
                      "properties": {
                        "relationships": {
                          "required": [
                            "shop",
                            "shipment_status"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Shipments"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage"
        ]
      }
    ],
    "summary": "Delete a shipment by id.",
    "description": "This endpoint deletes the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      }
    ],
    "responses": {
      "202": {
        "description": "The shipment will be deleted."
      },
      "204": {
        "description": "The shipment is deleted."
      }
    }
  }
}

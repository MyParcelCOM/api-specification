{
  "get": {
    "tags": [
      "Shipments"
    ],
    "security": [{
      "OAuth2": [
        "shipments.show",
        "shipments.manage"
      ]
    }],
    "summary": "Get a shipment by id.",
    "description": "This endpoint retrieves the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      },
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated string of the relationship names you want to include the data of.<br>The relationships that can be included are:<ul><li>`files`</li><li>`service`</li><li>`contract`</li><li>`service_options`</li><li>`shop`</li><li>`status`</li></ul>",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipment.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "$ref": "#/components/schemas/InternationalShipment"
                    }
                  ],
                  "example": {
                    "$ref": "#/components/examples/ShipmentResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "patch": {
    "tags": [
      "Shipments"
    ],
    "security": [{
      "OAuth2": [
        "shipments.manage"
      ]
    }],
    "summary": "Update a shipment by id.",
    "description": "This endpoint updates the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      }
    ],
    "requestBody": {
      "description": "The shipment object with attributes to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "$ref": "#/components/schemas/PatchShipment"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "The shipment is updated.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/Shipment"
                    },
                    {
                      "$ref": "#/components/schemas/InternationalShipment"
                    }
                  ],
                  "example": {
                    "$ref": "#/components/examples/ShipmentResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Shipments"
    ],
    "security": [{
      "OAuth2": [
        "shipments.manage"
      ]
    }],
    "summary": "Delete a shipment by id.",
    "description": "This endpoint deletes the shipment with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shipment_id"
      }
    ],
    "responses": {
      "202": {
        "description": "The shipment will be deleted."
      },
      "204": {
        "description": "The shipment is deleted."
      }
    }
  }
}

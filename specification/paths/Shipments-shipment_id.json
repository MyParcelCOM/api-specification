{
  "get": {
    "tags": [
      "Shipments"
    ],
    "summary": "Get shipments by id.",
    "description": "This endpoint retrieves the shipment with supplied id. A comma separated list of ids can be supplied to retrieve multiple shipments.",
    "parameters": [
      {
        "in": "path",
        "name": "shipment_id",
        "type": "string",
        "required": true,
        "description": "Id or comma separated list of ids of the shipment(s)."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipment(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Shipment"
              }
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/shipments/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "delete": {
    "tags": [
      "Shipments"
    ],
    "summary": "Delete a shipment by id.",
    "description": "This endpoint deletes the shipment with supplied id.",
    "parameters": [
      {
        "in": "path",
        "name": "shipment_id",
        "type": "string",
        "required": true,
        "description": "Id of the shipment."
      }
    ],
    "responses": {
      "202": {
        "description": "The shipment will be deleted."
      },
      "204": {
        "description": "The shipment is deleted."
      }
    }
  }
}

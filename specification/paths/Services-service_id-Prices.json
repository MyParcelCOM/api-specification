{
  "get": {
    "tags": [
      "Services"
    ],
    "summary": "Get all the prices from a service.",
    "description": "This endpoint retrieves prices for the supplied services.",
    "parameters": [
      {
        "in": "path",
        "name": "service_id",
        "type": "string",
        "required": true,
        "description": "Id or comma separated list of ids of the service(s)."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the service groups, insurances and options",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "description": "The service groups, insurances and options"
              },
              "example": [
                {
                  "type": "weight_groups",
                  "id": "c9ce29a4-6325-11e7-907b-a6006ad3dba0",
                  "attributes": {
                    "weight_min": 10,
                    "weight_max": 20,
                    "step_size": 1,
                    "price": {
                      "amount": 123,
                      "currency": "EUR"
                    },
                    "step_price": {
                      "amount": 123,
                      "currency": "EUR"
                    }
                  }
                },
                {
                  "type": "options",
                  "id": "c9ce29a4-6325-11e7-907b-a6006ad3dba0",
                  "attributes": {
                    "name": "signature",
                    "price": {
                      "amount": 123,
                      "currency": "EUR"
                    }
                  }
                },
                {
                  "type": "insurances",
                  "id": "c9ce29a4-6325-11e7-907b-a6006ad3dba0",
                  "attributes": {
                    "min": {
                      "amount": 1000,
                      "currency": "EUR"
                    },
                    "max": {
                      "amount": 5000,
                      "currency": "EUR"
                    },
                    "price": {
                      "amount": 123,
                      "currency": "EUR"
                    }
                  }
                }
              ]
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/prices?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/prices?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/prices?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/prices?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/services/c9ce29a4-6325-11e7-907b-a6006ad3dba0/prices?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "Statuses"
    ],
    "summary": "Get all the statuses.",
    "description": "This endpoint retrieves statuses.",
    "responses": {
      "200": {
        "description": "Retrieved the status(es).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Status"
              }
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/statuses?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/statuses?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/statuses?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/statuses?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/statuses?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

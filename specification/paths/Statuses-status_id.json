{
  "get": {
    "tags": [
      "Statuses"
    ],
    "summary": "ğŸš§ Retrieve statuses by id.",
    "description": "This endpoint retrieves the status with supplied id. A comma separated list of ids can be supplied to retrieve multiple statuses.",
    "parameters": [
      {
        "in": "path",
        "name": "status_id",
        "type": "string",
        "required": true,
        "description": "Id or comma separated list of id's of the status(es)."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the status(es).",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Status"
              }
            },
            "meta": {
              "type": "object",
              "properties": {
                "total-pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/statuses/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

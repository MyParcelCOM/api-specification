{
  "get": {
    "tags": [
      "ServiceContracts"
    ],
    "security": [{
      "OAuth2": [
        "shipments.show",
        "shipments.manage"
      ]
    }],
    "summary": "Get all the service groups for a service contract.",
    "description": "This endpoint retrieves service groups for the supplied service contract.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-service_contract_id"
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the service group(s).",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ServiceGroup"
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts/af5e65b6-a709-4f61-a565-7c12a752482f/groups?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts/af5e65b6-a709-4f61-a565-7c12a752482f/groups?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts/af5e65b6-a709-4f61-a565-7c12a752482f/groups?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts/af5e65b6-a709-4f61-a565-7c12a752482f/groups?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/service-contracts/af5e65b6-a709-4f61-a565-7c12a752482f/groups?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

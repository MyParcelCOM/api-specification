{
  "get": {
    "tags": [
      "Regions"
    ],
    "summary": "Get all the regions.",
    "description": "This endpoint retrieves regions. All regions are connected via parent-child relationships. Services are available in certain regions. Regions with a country code can be used to create shipments.",
    "parameters": [
      {
        "name": "filter[parent]",
        "in": "query",
        "description": "Comma separated string of parent ids to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[country_code]",
        "in": "query",
        "description": "Comma separated string of country codes to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[region_code]",
        "in": "query",
        "description": "Comma separated string of region codes to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[name]",
        "in": "query",
        "description": "Name of the region to filter on.",
        "schema": {
          "type": "string"
        }
      },
      {
        "name": "filter[categories][]",
        "in": "query",
        "description": "Array of strings of region categories to filter by.",
        "schema": {
          "type": "array"
        },
        "example": "$API_HOST/regions?filter[categories][]=country&filter[categories][]=continent"
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the regions.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Region"
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/regions?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/regions?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/regions?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/regions?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/regions?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

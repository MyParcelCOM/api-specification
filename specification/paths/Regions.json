{
  "get": {
    "tags": [
      "Regions"
    ],
    "summary": "Get all the regions.",
    "description": "This endpoint retrieves regions.",
    "parameters": [
      {
        "in": "query",
        "name": "filter[parent]",
        "type": "string",
        "required": false,
        "description": "Comma separated string of parent ids to filter on."
      },
      {
        "in": "query",
        "name": "filter[country_code]",
        "type": "string",
        "required": false,
        "description": "Comma separated string of country codes to filter on."
      },
      {
        "in": "query",
        "name": "filter[region_code]",
        "type": "string",
        "required": false,
        "description": "Comma separated string of region codes to filter on."
      },
      {
        "in": "query",
        "name": "filter[name]",
        "type": "string",
        "required": false,
        "description": "Name of the region to filter on."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the regions(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Region"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/regions?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/regions?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/regions?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/regions?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/regions?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "Shops"
    ],
    "summary": "Get all the shops.",
    "description": "This endpoint retrieves shops.",
    "responses": {
      "200": {
        "description": "Retrieved the shop(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Shop"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/shops?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/shops?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/shops?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/shops?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/shops?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Shops"
    ],
    "summary": "Create a new shop.",
    "description": "This endpoint creates a new shop with the posted data.",
    "parameters": [
      {
        "in": "body",
        "name": "shop",
        "description": "The shop object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Shop"
            }
          }
        }
      }
    ],
    "responses": {
      "201": {
        "description": "The shop is created.",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Shop"
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "Users"
    ],
    "summary": "Get users by id.",
    "description": "This endpoint retrieves the user with the supplied id. A comma separated list of ids can be supplied to retrieve multiple users.",
    "parameters": [
      {
        "in": "path",
        "name": "user_id",
        "type": "string",
        "required": true,
        "description": "Id or comma separated list of ids of the user(s)."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the user(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            },
            "meta": {
              "type": "object",
              "required": [
                "total_pages"
              ],
              "properties": {
                "total_pages": {
                  "type": "number",
                  "example": 13
                }
              }
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/users/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/users/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/users/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/users/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/users/c9ce29a4-6325-11e7-907b-a6006ad3dba0?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "Invitations"
    ],
    "summary": "Get all the invitations.",
    "description": "This endpoint retrieves invitations.",
    "responses": {
      "200": {
        "description": "Retrieved the invitation(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Invitation"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/invitations?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/invitations?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/invitations?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/invitations?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/invitations?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Invitations"
    ],
    "summary": "Create an invitation.",
    "description": "This endpoint creates a new invitation with the posted data. <strong>An invitation will be sent via email.</strong> ",
    "parameters": [
      {
        "in": "body",
        "name": "password",
        "description": "The invitation object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "attributes"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/Invitation.json"
                },
                "id": {
                  "$ref": "../includes/read-only-uuid.json"
                },
                "attributes": {
                  "type": "object",
                  "required": [
                    "email"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "email": {
                      "$ref": "../includes/email.json"
                    },
                    "name": {
                      "type": "string",
                      "example": "James Jonson"
                    },
                    "message": {
                      "type": "string",
                      "example": "Hi James, this is your invitation to join myparcel.com"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "201": {
        "description": "The invitation is created and will be sent to the specified user via email.",
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "$ref": "#/definitions/Invitation"
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "CarrierContracts"
    ],
    "security": [{
      "OAuth2": [
        "shipments.show",
        "shipments.manage",
        "brokers.show",
        "brokers.manage",
        "organizations.show",
        "organizations.manage"
      ]
    }],
    "summary": "Get all available carrier contracts for your account.",
    "description": "This endpoint retrieves carrier contracts available to your API client. Only active carrier contracts with a verified status can be used to create shipments.",
    "parameters": [
      {
        "name": "include",
        "in": "query",
        "description": "Comma separated string of the relationship names you want to include the data of.<br>The relationships that can be included are:<ul><li>`carrier`</li><li>`owner`</li></ul>",
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the carrier contracts.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/CarrierContract"
                      },
                      {
                        "required": [
                          "id"
                        ],
                        "properties": {
                          "attributes": {
                            "required": [
                              "active",
                              "status",
                              "currency",
                              "name"
                            ]
                          },
                          "relationships": {
                            "properties": {
                              "owner": {
                                "example": {
                                  "links": {
                                    "related": "$API_HOST/organizations/9cdf86e8-333f-4ed9-bb31-4935c780c947"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    ]
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/carrier-contracts?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/carrier-contracts?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/carrier-contracts?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/carrier-contracts?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/carrier-contracts?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "CarrierContracts"
    ],
    "security": [{
      "OAuth2": [
        "organization.manage",
        "brokers.manage"
      ]
    }],
    "summary": "Create a new carrier contract.",
    "description": "This endpoint creates a new carrier contract with the posted data. Use your organization ID in the owner relationship to become the contract owner. The status will be `pending` until our system has checked if the credentials are valid.",
    "requestBody": {
      "description": "The carrier contract object to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/CarrierContract"
                  },
                  {
                    "properties": {
                      "id": {
                        "readOnly": true
                      },
                      "attributes": {
                        "type": "object",
                        "required": [
                          "credentials",
                          "currency",
                          "name"
                        ],
                        "properties": {
                          "credentials": {
                            "type": "object",
                            "example": {
                              "api_username": "your_api_username",
                              "api_password": "your_api_password"
                            },
                            "description": "The credentials required to communicate with the carrier as defined by the `credentials_format` of the carrier."
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "The carrier contract is created.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/CarrierContract"
                    },
                    {
                      "required": [
                        "id"
                      ],
                      "properties": {
                        "attributes": {
                          "type": "object",
                          "required": [
                            "active",
                            "status",
                            "currency",
                            "name"
                          ]
                        },
                        "relationships": {
                          "properties": {
                            "owner": {
                              "example": {
                                "links": {
                                  "related": "$API_HOST/organizations/9cdf86e8-333f-4ed9-bb31-4935c780c947"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}

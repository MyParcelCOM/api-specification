    "description": "This endpoint retrieves a return tag by id.",
    "responses": {
      "200": {
        "description": "Retrieved the return tag.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "$ref": "#/components/schemas/ReturnTagResponse"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "No return tag was found for the given ID."
      }

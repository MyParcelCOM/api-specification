{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-return_id"
    }
  ],
  "post": {
    "tags": [
      "Returns"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Reject a return.",
    "description": "This endpoint modifies the status of a return resource to `return-rejected`",
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "maxLength": 255,
                    "description": "Message explaining the reason for rejection.",
                    "example": "The items you've selected are not eligible to be returned because..."
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "The return is rejected."
      },
      "404": {
        "description": "No return was found for the given ID."
      },
      "422": {
        "description": "This modification is not allowed on this return."
      }
    }
  }
}

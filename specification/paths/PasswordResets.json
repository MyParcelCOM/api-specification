{
  "post": {
    "tags": [
      "PasswordResets"
    ],
    "summary": "Create a password reset.",
    "description": "This endpoint creates a new password reset with the posted data. <strong>A password reset link will be sent via email.</strong> Any previous password resets for this user will be disabled.",
    "parameters": [
      {
        "in": "body",
        "name": "password",
        "description": "The password reset object with an `email` attribute.",
        "required": true,
        "schema": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "required": [
                "type",
                "attributes"
              ],
              "additionalProperties": false,
              "properties": {
                "type": {
                  "$ref": "../types/PasswordReset.json"
                },
                "id": {
                  "$ref": "../includes/read-only-uuid.json"
                },
                "attributes": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "email": {
                      "type": "string",
                      "example": "john@doe.com"
                    },
                    "password": {
                      "readOnly": true,
                      "type": "string",
                      "example": "secret"
                    },
                    "expires_at": {
                      "$ref": "../includes/read-only-timestamp.json"
                    }
                  }
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "202": {
        "description": "A new password reset token will be sent to the specified user via email."
      }
    }
  }
}

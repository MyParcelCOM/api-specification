{
  "get": {
    "tags": [
      "Shops"
    ],
    "summary": "Get all available shipment estimates for your shop.",
    "description": "This endpoint retrieves available shipment estimates for your shop.",
    "parameters": [
      {
        "in": "path",
        "name": "shop_id",
        "type": "string",
        "required": true,
        "description": "Id of the shop."
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shipment estimate(s).",
        "schema": {
          "type": "object",
          "required": [
            "data",
            "meta",
            "links"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ShipmentEstimate"
              }
            },
            "meta": {
              "$ref": "../includes/pagination-meta.json"
            },
            "links": {
              "type": "object",
              "required": [
                "self",
                "first",
                "last"
              ],
              "properties": {
                "self": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0/shipment-estimates?page[number]=3&page[size]=30"
                },
                "first": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0/shipment-estimates?page[number]=1&page[size]=30"
                },
                "prev": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0/shipment-estimates?page[number]=2&page[size]=30"
                },
                "next": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0/shipment-estimates?page[number]=4&page[size]=30"
                },
                "last": {
                  "type": "string",
                  "example": "$base_url/shops/c9ce29a4-6325-11e7-907b-a6006ad3dba0/shipment-estimates?page[number]=13&page[size]=30"
                }
              }
            }
          }
        }
      }
    }
  },
  "post": {
    "tags": [
      "Shops"
    ],
    "summary": "Create a new shipment estimate.",
    "description": "This endpoint creates a new shipment estimate with the posted data.",
    "parameters": [
      {
        "in": "path",
        "name": "shop_id",
        "type": "string",
        "required": true,
        "description": "Id of the shop."
      },
      {
        "in": "body",
        "name": "shipment_estimate",
        "description": "The shipment estimate object to be created.",
        "required": true,
        "schema": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "$ref": "#/definitions/ShipmentEstimate"
            }
          }
        }
      }
    ],
    "responses": {
      "201": {
        "description": "The shipment estimate is created.",
        "schema": {
          "type": "object",
          "required": [
            "data"
          ],
          "additionalProperties": false,
          "properties": {
            "data": {
              "$ref": "#/definitions/ShipmentEstimate"
            }
          }
        }
      }
    }
  }
}

{
  "get": {
    "tags": [
      "Shops"
    ],
    "security": [
      {
        "OAuth2": [
          "shipments.manage",
          "organizations.manage"
        ]
      }
    ],
    "summary": "Get a shop by id.",
    "description": "This endpoint retrieves the shop with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shop_id"
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the shop.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Shop"
                    },
                    {
                      "required": [
                        "id",
                        "links"
                      ],
                      "properties": {
                        "attributes": {
                          "required": [
                            "name",
                            "created_at"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "patch": {
    "tags": [
      "Shops"
    ],
    "security": [
      {
        "OAuth2": [
          "organizations.manage"
        ]
      }
    ],
    "summary": "Update a shop by id.",
    "description": "This endpoint updates the shop with the supplied id.",
    "parameters": [
      {
        "$ref": "#/components/parameters/path-shop_id"
      }
    ],
    "requestBody": {
      "description": "The shop object with attributes to be updated.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "$ref": "#/components/schemas/PatchShop"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "The shop is updated.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Shop"
                    },
                    {
                      "required": [
                        "id",
                        "links"
                      ],
                      "properties": {
                        "attributes": {
                          "required": [
                            "name",
                            "created_at"
                          ]
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}

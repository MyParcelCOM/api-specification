{
  "parameters": [
    {
      "$ref": "#/components/parameters/path-shop_id"
    }
  ],
  "get": {
    "tags": [
      "MerchantStatuses"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Get all merchant statuses for the given shop.",
    "description": "This endpoint retrieves merchant statuses for the given shop.",
    "parameters": [
      {
        "$ref": "#/components/parameters/header-accept-language"
      }
    ],
    "responses": {
      "200": {
        "description": "Retrieved the merchant statuses for the given shop.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data",
                "meta",
                "links"
              ],
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MerchantStatusResponse"
                  }
                },
                "meta": {
                  "$ref": "#/components/schemas/PaginationMeta"
                },
                "links": {
                  "type": "object",
                  "required": [
                    "self",
                    "first",
                    "last"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "self": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/merchant-statuses?page[number]=3&page[size]=30"
                    },
                    "first": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/merchant-statuses?page[number]=1&page[size]=30"
                    },
                    "prev": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/merchant-statuses?page[number]=2&page[size]=30"
                    },
                    "next": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/merchant-statuses?page[number]=4&page[size]=30"
                    },
                    "last": {
                      "type": "string",
                      "example": "$API_HOST/returns/v1/shops/35eddf50-1d84-47a3-8479-6bfda729cd99/merchant-statuses?page[number]=13&page[size]=30"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "No return reason was found with the given shop."
      }
    }
  },
  "post": {
    "tags": [
      "MerchantStatuses"
    ],
    "security": [
      {
        "OAuth2": [
          "returns.manage"
        ]
      }
    ],
    "summary": "Add a merchant status to the given shop.",
    "description": "This endpoint adds a merchant status to the specified shop.",
    "requestBody": {
      "description": "The merchan status to be created.",
      "required": true,
      "content": {
        "application/vnd.api+json": {
          "schema": {
            "type": "object",
            "required": [
              "data"
            ],
            "additionalProperties": false,
            "properties": {
              "data": {
                "allOf": [
                  {
                    "$ref": "#/components/schemas/MerchantStatus"
                  },
                  {
                    "required": [
                      "attributes",
                      "relationships"
                    ],
                    "properties": {
                      "id": {
                        "readOnly": true
                      },
                      "attributes": {
                        "required": [
                          "name",
                          "code",
                          "status_level"
                        ]
                      },
                      "relationships": {
                        "required": [
                          "shop"
                        ]
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "The merchant status has been created for the specified shop.",
        "content": {
          "application/vnd.api+json": {
            "schema": {
              "type": "object",
              "required": [
                "data"
              ],
              "additionalProperties": false,
              "properties": {
                "data": {
                  "$ref": "#/components/schemas/MerchantStatusResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}

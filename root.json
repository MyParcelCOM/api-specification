{
  "openapi": "3.0.0",
  "info": {
    "$ref": "./specification/info.json"
  },
  "servers": [
    {
      "url": "$API_HOST",
      "description": "The MyParcel.com API Sandbox"
    }
  ],
  "paths": {
    "$ref": "./specification/paths.json"
  },
  "components": {
    "schemas": {
      "$ref": "./specification/schemas.json"
    },
    "examples": {
      "$ref": "./specification/examples.json"
    },
    "parameters": {
      "$ref": "./specification/parameters.json"
    },
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "$AUTH_HOST",
            "scopes": {
              "brokers.show": "",
              "brokers.manage": "",
              "organizations.make": "",
              "organizations.show": "",
              "organizations.manage": "",
              "shipments.show": "",
              "shipments.manage": "",
              "shops.show": "",
              "shops.manage": "",
              "system-messages.show": "",
              "system-messages.manage": "",
              "users.show": "",
              "users.manage": "",
              "invitations.show": "",
              "invitations.manage": ""
            }
          }
        }
      }
    }
  },
  "externalDocs": {
    "url": "https://docs.myparcel.com",
    "description": "The documentation describing the MyParcel.com API and its corresponding tools."
  }
}
